# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

GET      /fancy                      controllers.HelloController.doSomethingFancy

GET   /fancy/:name                   controllers.HelloController.helloUser(name: String)

POST /fancy/userwithdetails         controllers.HelloController.helloUserWithDetails()

POST  /fancy/userwithmap                controllers.HelloController.helloUserWithMap()

GET   /fancy/userwithname/:name             controllers.HelloController.helloUserWithName(name: String)

GET  /count                              controllers.CountController.getCurrentCount()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
